                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <DatePicker fx:id="salesStartDatePicker" layoutX="49.0" layoutY="60.0" prefHeight="25.0" prefWidth="238.0" promptText="Start date" />
                        <DatePicker fx:id="saleEndDatePicker" layoutX="317.0" layoutY="60.0" prefHeight="25.0" prefWidth="238.0" promptText="End date" />
